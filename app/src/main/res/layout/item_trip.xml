<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/item_background"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_auto"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/textDriverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDriverRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5 ★"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:textColor="#FFBB00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textOrigin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ciudad de México"
            android:textSize="16sp"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----------->"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginHorizontal="8dp" />

        <TextView
            android:id="@+id/textDestination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Acapulco de Juárez"
            android:textSize="16sp"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora de salida:"
            android:paddingRight="8dp"
            android:textSize="14sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textDepartureTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="23:30"
            android:textSize="14sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$364.00"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugares disponibles:"
            android:paddingRight="8dp"
            android:textSize="14sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textSeatsAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4/20"
            android:textSize="14sp"
            android:textColor="#000" />
    </LinearLayout>
</LinearLayout>
